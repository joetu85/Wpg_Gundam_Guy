<h1>All products</h1>
<% @products.each do |product| %>
  <div>
    <h2><%= product.product_name %></h2>
    <p><%= product.image %></p>
    <p>Price: <%= product.price %></p>
    <p>Category: <br />
    <% if product.category.present? %>
      <%= product.category.name %></p>
    <% end %>
  </div>
<% end %>
